datasource db {
  provider = "sqlserver" // Otras opciones incluyen "postgresql", "mysql", etc.
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String   // Campo para el nombre
  lastName  String   // Campo para el apellido
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
